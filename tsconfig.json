{
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["node", "jest", "mdx", "@testing-library/jest-dom"]
  },
  "include": ["src"],
  "files": ["src/global.d.ts"]
}